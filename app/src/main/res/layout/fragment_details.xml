<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_details"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/details_text_title_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_details_item"
                    android:textColor="@color/colorTextMain"
                    android:textSize="@dimen/details_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_details_item"
                    android:textColor="@color/colorTextMain"
                    android:textSize="@dimen/details_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/details_icon"
                android:layout_width="@dimen/icon_size_details_item"
                android:layout_height="@dimen/icon_size_details_item"
                android:layout_marginLeft="@dimen/margin_left_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_temperature_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_label_temperature"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_label_description"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_description_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_wind_deg_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_label_wind_deg"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_wind_deg_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_wind_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_label_wind_speed"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_wind_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_label_humidity"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_details_item"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_pressure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_label_pressure"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/details_text_size" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>