<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Weather">=
        <ListPreference
            android:entries="@array/cities"
            android:entryValues="@array/cities"
            android:key="city"
            android:summary="Write city where you want to see weather"
            android:title="City" />
        <ListPreference
            android:defaultValue="k"
            android:entries="@array/measure_sign"
            android:entryValues="@array/measure_values"
            android:key="temp_measure"
            android:summary="Measure of temperature"
            android:title="Measure" />
    </PreferenceCategory>
</PreferenceScreen>